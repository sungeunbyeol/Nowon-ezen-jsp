<%@ page language="java" contentType="text/html; charset=EUC-KR"
    pageEncoding="EUC-KR"%>
<%
		request.setCharacterEncoding("EUC-KR"); //한글처리하기
		String name = request.getParameter("name");
		if (name == null || name.trim().equals("")){ //유효성검사
			response.sendRedirect("student.jsp");
			return;
		}
%><<table>
		<div align="center">
		<hr color="green" width="300">
		<hr color="green" width="300">
		<table border="1" width="500">
			<tr bgcolor="yellow">
				<th>아이디</th>
				<th>학생명</th>
				<th>학급명</th>
			</tr>
<%
		Class.forName("oracle.jdbc.driver.OracleDriver");
		String url = "jdbc:oracle:thin:@localhost:1521:xe";
		String user = "javaapi";
		String pass = "javaapi";
		Connection con = DriverManager.getConnection(url, user, pass);
		
		String sql = "select count(*) from student where name=?"; //count(*)카운트 세서 몇명인지 알려달라는 뜻
		PreparedStatement ps = con.prepareStatement(sql);
		ps.setString(1, name);
		ResultSet rs = ps.executeQuery();
		rs.next();
		int count = rs.getInt(1);
		if(count==0){%>
			<tr>
				<td colspan="3"><%=name %>학생은 없습니다.</td>
			</tr>
<%		} else{
			sql = "select * from student where name = ?";
			ps = con.prepareStatement(sql);
			ps.setString(1, name);
			rs = ps.executeQuery();
			while(rs.next()){
				String id = rs.getString("id");
				String cname = rs.getString("cname");%>
	<tr>
		<td><%=id %></td>
		<td><%=name %></td>
		<td><%=cname %></td>
	</tr>
<% } %>	
	<tr>
		<td colspan="3"><%=name %>학생은 총<%=count %>명 있습니다.</td>
	</tr>
<%} %> <!--  end if -->
<% rs.close();
	 ps.close();
	 con.close();%>
</table>
